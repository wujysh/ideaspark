<% provide(:title, full_title('Forgot password')) %>

<div class="container">
  <div class="row">
    <h2 class="col-md-6 col-md-offset-3">Forgot your password?</h2>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, :as => resource_name,
                            :url => password_path(resource_name),
                            :html => { :method => :post, :role => "form" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, :class => "form-control" %>
        </div>

        <%= f.submit "Send me reset password instructions", :class => "btn btn-large btn-success" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>